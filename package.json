{
  "name": "spike",
  "description": "an opinionated static build tool, powered by webpack",
  "version": "0.13.0",
  "author": "Jeff Escalante",
  "ava": {
    "verbose": "true",
    "serial": "true"
  },
  "bin": {
    "spike": "./bin/spike"
  },
  "bugs": "https://github.com/static-dev/spike/issues",
  "dependencies": {
    "argparse": "^1.0.9",
    "chalk": "^1.1.3",
    "inquirer": "^2.0.0",
    "lodash.reduce": "^4.6.0",
    "spike-core": "^0.13.0",
    "universal-analytics": "^0.4.8"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "coveralls": "^2.11.15",
    "nyc": "^10.0.0",
    "rewire": "^2.5.1",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8.0"
  },
  "homepage": "https://github.com/static-dev/spike",
  "keywords": [
    "spike",
    "static",
    "webpack"
  ],
  "license": "MIT",
  "main": "lib",
  "repository": "static-dev/spike",
  "scripts": {
    "coverage": "nyc --reporter=html ava && open coverage/index.html",
    "coveralls": "nyc --reporter=lcov ava && cat ./coverage/lcov.info | coveralls",
    "lint": "standard --verbose | snazzy",
    "precommit": "npm run lint -s",
    "pretest": "npm run lint -s",
    "test": "ava "
  }
}
